	body
		.container.justify-content-center.text-center
			!= messages('message',locals)
		// Header Image
		.d-flex.justify-content-center
			img.img-fluid.py-3(src='/KUYRCC.png', alt='KUYRCC logo')
		// Navigation
		nav.container.navbar.navbar-expand-md.navbar-light.bg-light.sticky-top
			.container-fluid
				a.navbar-brand(href='#')
					img.img-fluid(src='/kuyrccText.png')
				button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarResponsive')
					span.navbar-toggler-icon
				#navbarResponsive.collapse.navbar-collapse
					ul.navbar-nav.mr-auto.navbar-left
						li.nav-item.active
							a.nav-link(href='/frontend')  Home 
						li.nav-item.active
							a.nav-link(href='/checklist')  CheckList 
						li.nav-item.active
							a.nav-link(href='/')  Starting
						li.nav-item.active
							a.nav-link(href='/form/membership') Be_a_Member  
						li.nav-item.active
							a.nav-link(href='/users/contacts') Contact 
						li.nav-item.active
							a.nav-link(href='/users/contacts').mr-5 History
					ul.navbar-nav.mr-auto.navbar-right
						if usersGlobal

							li.nav-item.active
								.text.text-dark.font-italic.font-weight-bold.ml-5.mb-2 #{usersGlobal.name}
								button.btn.ml-5.btn-dark.waves-effect.mr-0.float-md-right(type='button') Notificaions
									span.badge.badge-danger.ml-1 4
								a.nav-link(href='/logout').active.text-danger.font-weight-bold.ml-5.mr-5 Log out

								


							li.nav-item.active
								a(href='/users/eventList/CreateEvent')
									button.btn.ml-2.btn-warning.waves-effect.mr-0.float-md-right(type='button') Create Events
									
									a(href='/users/contacts')
										button.btn.ml-2.mt-2.btn-warning.waves-effect.mr-0.float-md-right(type='button') New Contacts
						else
							li
								button.btn.btn-outline-info.waves-effect.ml-0.float-md-right(type='button', data-toggle='modal', data-target='#modalLoginForm') Log In
							li
								button.btn.btn-outline-info.waves-effect.mr-0.flaot-md-right(type='button', data-toggle='modal', data-target='#modalRegisterForm') Sign Up
						
		
		// -MODAL login and signup forms
		#modalLoginForm.modal.fade(tabindex='-1', role='dialog')
			.modal-dialog(role='document')
				.modal-content
					.modal-header.text-center
						h4.modal-title.w-100.font-weight-bold Log In
						button.close(type='button', data-dismiss='modal')
					.modal-body.mx-3
						form(method='POST', action='/LogIn')
							.form-group.md-form.mb-5
								label(for='email') Email:
								input#email.form-control(type='email', placeholder='Enter email', name='LoginEmail')
							.form-group.md-form.mb-5
								label(for='pwd') Password:
								input#pwd.form-control(type='password', placeholder='Enter password', name='LoginPassword')
							.form-group.form-check.md-form.mb-5
								label.form-check-label
									input.form-check-input(type='checkbox', name='LoginRemember')
									|  Remember me
							.form-group.md-form.mb-5
								button.btn.btn-deep-orange(type='submit', value='Sumbit') Log In
		#modalRegisterForm.modal.fade(tabindex='-1', role='dialog')
			.modal-dialog(role='document')
				.modal-content
					.modal-header.text-center
						h4.modal-title.w-100.font-weight-bold Sign up
						button.close(type='button', data-dismiss='modal')
					.modal-body.mx-3
						if errors
							each error, i in errors
								div(class="alert alert-danger") #{error.msg}
						form(method="POST",action='/frontend')
							.form-group.md-form.mb-4
								label(for='text') Name
								input#text.form-control(type='text', placeholder='Enter name', name='RegName')
							.form-group.md-form.mb-4
								label(for='email') Email:
								input#email.form-control(type='email', placeholder='Enter email', name='RegEmail')
							.form-group.md-form.mb-4
								label(for='pwd') Password:
								input#pwd.form-control(type='password', placeholder='Enter password', name='RegPassword')
							.form-group.md-form.mb-4
								label(for='pwd') Confirm Password:
								input#pwd.form-control(type='password', placeholder='Enter password again', name='RegCPassword')
							.form-group.md-form.mb-4
								button.btn.btn-deep-orange(type='submit', value="submit") Sign Up
		
